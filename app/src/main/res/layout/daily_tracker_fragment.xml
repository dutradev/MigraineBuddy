<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dutradev.migrainebuddy.DailyTracker.DailyTrackerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_height="match_parent"
            android:id="@+id/btnSun"
            android:text="Sun\n30"
            style="@style/DaysTheme"
            android:layout_marginTop="0dp"
            android:background="@color/color_sun"
            android:layout_weight="1"/>
        <Button
            android:layout_height="match_parent"
            android:id="@+id/btnMon"
            android:text="Mon\n31"
            style="@style/DaysTheme"
            android:layout_marginTop="0dp"
            android:background="@color/color_mon"
            android:layout_weight="1"/>
        <Button
            android:layout_height="match_parent"
            android:id="@+id/btnTue"
            android:text="Tue\n1"
            style="@style/DaysTheme"
            android:layout_marginTop="0dp"
            android:background="@color/color_tue"
            android:layout_weight="1"/>
        <Button
            android:layout_height="match_parent"
            android:id="@+id/btnWed"
            android:text="Wed\n2"
            style="@style/DaysTheme"
            android:layout_marginTop="0dp"
            android:background="@color/color_wed"
            android:layout_weight="1"/>
        <Button
            android:layout_height="match_parent"
            android:id="@+id/btnThu"
            android:text="Thu\n3"
            style="@style/DaysTheme"
            android:layout_marginTop="0dp"
            android:background="@color/color_thu"
            android:textColor="@color/color_text_menu"
            android:layout_weight="1"/>
        <Button
            android:layout_height="match_parent"
            android:id="@+id/btnFri"
            android:text="Fri\n4"
            style="@style/DaysTheme"
            android:layout_marginTop="0dp"
            android:background="@color/color_fri2"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_weight="1"/>
        <Button
            android:layout_height="match_parent"
            android:id="@+id/btnSat"
            android:text="Sat\n5"
            style="@style/DaysTheme"
            android:layout_marginTop="0dp"
            android:background="@color/color_fri"
            android:layout_weight="1"/>

    </LinearLayout>

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:layout_margin="@dimen/margin_20">
    </GridView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm"
        android:textColor="@android:color/white"
        android:textSize="@dimen/margin_20"
        android:background="@color/color_bottom_menu"
        android:paddingTop="@dimen/margin_20"
        android:paddingBottom="@dimen/margin_20"/>
</LinearLayout>
